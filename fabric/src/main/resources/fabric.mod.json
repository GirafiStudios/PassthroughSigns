{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}"
    ],
    "contact": {
        "homepage": "http://minecraft.curseforge.com/projects/passthrough-signs",
        "sources": "https://github.com/dmillerw/PassthroughSigns"
    },
    "license": "${license}",
    "icon": "assets/${mod_id}/${mod_id}.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "com.girafi.passthroughsigns.PassthroughSigns"
        ]
    },
    "mixins": [
        "${mod_id}.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.15.3",
        "fabric-api": "*",
        "minecraft": "~1.20.4",
        "java": ">=17",
        "forgeconfigapiport": ">=20.4.0"
    },
    "suggests": {
        "another-mod": "*"
    }
}